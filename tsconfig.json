{
   "compilerOptions": {
      "lib": [
         "es2019"
      ],
      "target": "es2019",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "baseUrl": ".",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "resolveJsonModule": true
   }
}